<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/tv_notice_11_push_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:textColor="#ff999999"
        android:textSize="14sp"
        tools:text="2020年02月08日 09:00" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingTop="18dp"
            android:paddingEnd="15dp"
            android:paddingBottom="14dp">

            <View
                android:id="@+id/v_notice_11_dot"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shape_notice_list_dot" />

            <ImageView
                android:id="@+id/iv_notice_type_11_url"
                android:layout_width="32dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_notice_11" />

            <TextView
                android:id="@+id/tv_notice_type_11_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:gravity="center_vertical"
                android:text="当前版本不支持此类信息"
                android:textColor="#ff666666"
                android:textSize="14sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>