<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_msg_tab_indicator_line"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_gravity="bottom"
        android:background="@drawable/shape_notice_ti_line"
        app:layout_constraintBottom_toBottomOf="@+id/tv_msg_tab_text"
        app:layout_constraintLeft_toLeftOf="@+id/tv_msg_tab_text"
        app:layout_constraintRight_toRightOf="@+id/tv_msg_tab_text" />

    <ImageView
        android:id="@+id/iv_msg_tab_indicator_dot"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_gravity="end"
        android:background="@drawable/shape_notice_ti_dot"
        app:layout_constraintRight_toRightOf="@+id/tv_msg_tab_text"
        app:layout_constraintTop_toTopOf="@+id/tv_msg_tab_text" />

    <TextView
        android:id="@+id/tv_msg_tab_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff333333"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="服务通知" />

    <TextView
        android:id="@+id/tv_notice_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_notice_btn_bg"
        android:gravity="center"
        android:paddingStart="4dp"
        android:paddingTop="2dp"
        android:paddingEnd="4dp"
        android:paddingBottom="2dp"
        android:textColor="#ffffffff"
        android:textSize="10sp"
        app:layout_constraintRight_toRightOf="@+id/tv_msg_tab_text"
        app:layout_constraintTop_toTopOf="@+id/tv_msg_tab_text"
        tools:text="99+" />
</android.support.constraint.ConstraintLayout>


