<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyMapActivity">
    <RelativeLayout
        android:id="@+id/rl_map_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:elevation="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#333333"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:drawablePadding="8dp"
            android:layout_marginStart="16dp"
            android:drawableStart="@drawable/base_back_toolbar"
            android:onClick="back"
            android:text="返回"/>
        <LinearLayout
            android:id="@+id/ll_map_select_addr"
            android:layout_width="277dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:background="@drawable/shape_map_title">
            <TextView
                android:id="@+id/tv_map_select_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="9dp"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:drawablePadding="23dp"
                android:layout_marginStart="12dp"
                android:text="北京"
                android:drawableEnd="@drawable/ic_map_up"/>
            <View
                android:layout_width="1dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:background="#ffd8d8d8"
                />
            <TextView
                android:id="@+id/tv_map_select_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:textSize="14sp"
                android:textColor="#333333"
                android:text="可诺丹婷"/>
        </LinearLayout>

    </RelativeLayout>
    <com.idengyun.maplibrary.view.DyMapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_map_title"
        android:layout_marginBottom="192dp"/>
    <com.idengyun.maplibrary.view.PoiScrollLayout
        android:id="@+id/sl_map_poi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="#00000000"
        android:layout_alignParentBottom="true">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#666666"
                android:drawablePadding="8dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:text="附近地址"
                android:drawableEnd="@drawable/ic_map_up"/>
        </FrameLayout>

        <com.idengyun.maplibrary.view.PoiScrollRecyclerView
            android:id="@+id/rv_map_poi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"/>
    </com.idengyun.maplibrary.view.PoiScrollLayout>

</RelativeLayout>