<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@android:color/white"
        android:paddingTop="24dp">

        <com.dengyun.baselibrary.widgets.toolbar.BaseToolBar
            android:layout_width="match_parent"
            android:layout_height="@dimen/basetool_height"
            app:toolbar_title="身份证信息" />
    </FrameLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="30dp"
                app:cardBackgroundColor="#F8F8F8"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_id_card_logo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="16dp">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_id_card_key_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_real_id_card_bg"
                            android:paddingStart="6dp"
                            android:paddingTop="2dp"
                            android:paddingEnd="6dp"
                            android:paddingBottom="2dp"
                            android:text="姓名"
                            android:textColor="#ffffffff"
                            android:textSize="12sp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tv_id_card_value_1"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/tv_id_card_value_1" />

                        <TextView
                            android:id="@+id/tv_id_card_key_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_real_id_card_bg"
                            android:paddingStart="6dp"
                            android:paddingTop="2dp"
                            android:paddingEnd="6dp"
                            android:paddingBottom="2dp"
                            android:text="性别"
                            android:textColor="#ffffffff"
                            android:textSize="12sp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tv_id_card_value_2"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/tv_id_card_value_2" />

                        <TextView
                            android:id="@+id/tv_id_card_key_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_real_id_card_bg"
                            android:paddingStart="6dp"
                            android:paddingTop="2dp"
                            android:paddingEnd="6dp"
                            android:paddingBottom="2dp"
                            android:text="民族"
                            android:textColor="#ffffffff"
                            android:textSize="12sp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tv_id_card_value_3"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/tv_id_card_value_3" />

                        <TextView
                            android:id="@+id/tv_id_card_key_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_real_id_card_bg"
                            android:paddingStart="6dp"
                            android:paddingTop="2dp"
                            android:paddingEnd="6dp"
                            android:paddingBottom="2dp"
                            android:text="出生"
                            android:textColor="#ffffffff"
                            android:textSize="12sp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tv_id_card_value_4"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/tv_id_card_value_4" />

                        <TextView
                            android:id="@+id/tv_id_card_key_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_real_id_card_bg"
                            android:paddingStart="6dp"
                            android:paddingTop="2dp"
                            android:paddingEnd="6dp"
                            android:paddingBottom="2dp"
                            android:text="住址"
                            android:textColor="#ffffffff"
                            android:textSize="12sp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tv_id_card_value_5"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/tv_id_card_value_5" />

                        <TextView
                            android:id="@+id/tv_id_card_key_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_real_id_card_bg"
                            android:paddingStart="6dp"
                            android:paddingTop="2dp"
                            android:paddingEnd="6dp"
                            android:paddingBottom="2dp"
                            android:text="身份号码"
                            android:textColor="#ffffffff"
                            android:textSize="12sp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tv_id_card_value_6"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/tv_id_card_value_6" />

                        <TextView
                            android:id="@+id/tv_id_card_key_7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="6dp"
                            android:paddingTop="2dp"
                            android:paddingEnd="6dp"
                            android:paddingBottom="2dp"
                            android:text="签发机关"
                            android:textColor="#666666"
                            android:textSize="14sp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tv_id_card_value_7"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/tv_id_card_value_7" />

                        <TextView
                            android:id="@+id/tv_id_card_key_8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="6dp"
                            android:paddingTop="2dp"
                            android:paddingEnd="6dp"
                            android:paddingBottom="2dp"
                            android:text="有效期限"
                            android:textColor="#666666"
                            android:textSize="14sp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tv_id_card_value_8"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/tv_id_card_value_8" />

                        <TextView
                            android:id="@+id/tv_id_card_value_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="32dp"
                            android:textColor="#ff333333"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toTopOf="@+id/tv_id_card_value_2"
                            app:layout_constraintLeft_toRightOf="@+id/tv_id_card_key_1"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="施永哲" />

                        <TextView
                            android:id="@+id/tv_id_card_value_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:textColor="#ff333333"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toTopOf="@+id/tv_id_card_value_3"
                            app:layout_constraintLeft_toRightOf="@+id/tv_id_card_key_2"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_id_card_value_1"
                            tools:text="男" />

                        <TextView
                            android:id="@+id/tv_id_card_value_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:textColor="#ff333333"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toTopOf="@+id/tv_id_card_value_4"
                            app:layout_constraintLeft_toRightOf="@+id/tv_id_card_key_3"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_id_card_value_2"
                            tools:text="汉" />

                        <TextView
                            android:id="@+id/tv_id_card_value_4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="12dp"
                            android:textColor="#ff333333"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toTopOf="@+id/tv_id_card_value_5"
                            app:layout_constraintLeft_toRightOf="@+id/tv_id_card_key_4"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_id_card_value_3"
                            tools:text="2020年03月11日" />

                        <TextView
                            android:id="@+id/tv_id_card_value_5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="12dp"
                            android:lineSpacingExtra="2dp"
                            android:textColor="#ff333333"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toTopOf="@+id/tv_id_card_value_6"
                            app:layout_constraintLeft_toRightOf="@+id/tv_id_card_key_5"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_id_card_value_4"
                            tools:text="北京市大兴区荣华南路12号大族广场T5-26" />

                        <TextView
                            android:id="@+id/tv_id_card_value_6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="12dp"
                            android:textColor="#ff333333"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toTopOf="@+id/v_id_card_divider"
                            app:layout_constraintLeft_toRightOf="@+id/tv_id_card_key_6"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_id_card_value_5"
                            tools:text="110101202003111234" />

                        <View
                            android:id="@+id/v_id_card_divider"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="28dp"
                            android:background="#EAEAEA"
                            app:layout_constraintBottom_toTopOf="@+id/tv_id_card_value_7"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_id_card_value_6" />

                        <TextView
                            android:id="@+id/tv_id_card_value_7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="28dp"
                            android:textColor="#ff333333"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toTopOf="@+id/tv_id_card_value_8"
                            app:layout_constraintLeft_toRightOf="@+id/tv_id_card_key_7"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/v_id_card_divider"
                            tools:text="北京市公安局大兴分局" />

                        <TextView
                            android:id="@+id/tv_id_card_value_8"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="32dp"
                            android:textColor="#ff333333"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/tv_id_card_key_8"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_id_card_value_7"
                            tools:text="2020.01.01-2040.01.01" />
                    </android.support.constraint.ConstraintLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="92dp"
                android:drawableStart="@drawable/shape_nick_dot_red"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="身份信息不可修改"
                android:textColor="#ff999999"
                android:textSize="14sp" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>


