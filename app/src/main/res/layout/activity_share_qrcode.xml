<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/orange"
    tools:context=".activitys.ShareQRCodeActivity">
    <com.dengyun.baselibrary.widgets.toolbar.BaseToolBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/basetool_height"
        android:background="@color/transparent"
        app:toolbar_title="分享二维码"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="38dp"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:text="注册邀请码" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginStart="38dp">
        <TextView
            android:id="@+id/tv_invitation_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="A1B2C3D4F5G6"/>
        <TextView
            android:id="@+id/tv_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@drawable/shape_white_corner4"
            android:layout_gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textSize="14sp"
            android:textColor="#FF6633"
            android:text="复制"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal"
        android:background="@drawable/shape_white_share_box">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:textSize="20sp"
            android:textColor="@color/gray333"
            android:textStyle="bold"
            android:text="云乐购"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="14sp"
            android:textColor="@color/gray333"
            android:text="批发零售·钜惠享不停"/>
        <View
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:layout_marginTop="12dp"
            android:background="#FF5555"/>
        <ImageView
            android:id="@+id/iv_qr_code"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textSize="14sp"
            android:textColor="@color/gray333"
            android:text="长按识别二维码，下载APP享福利"
            android:layout_marginBottom="36dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_save_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:text="保存并分享图片"/>




</LinearLayout>