<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tint"
    android:orientation="vertical">

    <com.dengyun.baselibrary.widgets.toolbar.BaseToolBar
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:toolbar_title="物流详情" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_16">

        <ImageView
            android:id="@+id/iv_goods_3"
            android:layout_width="66dp"
            android:layout_height="66dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快递公司："
                    android:textColor="@color/gray666" />

                <TextView
                    android:id="@+id/tv_logistics_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="顺丰快递"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快递单号："
                    android:textColor="@color/gray666" />

                <TextView
                    android:id="@+id/tv_logistics_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123456789012345"
                    />
                <TextView
                    android:id="@+id/tv_logistics_id_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:background="@drawable/shape_orange_bac_rec_4"
                    android:paddingStart="4dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="4dp"
                    android:paddingBottom="2dp"
                    android:text="复制"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系电话："
                    android:textColor="@color/gray666" />

                <TextView
                    android:id="@+id/tv_logistics_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="010-12345678"
                     />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_order_status_shop_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            tools:text="发货单1" />

        <TextView
            android:id="@+id/tv_order_status_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_goods_detail_arrow_light"
            android:drawablePadding="@dimen/dp_9"
            android:textColor="@color/gray333"
            android:textSize="@dimen/sp_12"
            tools:text="京东快递 JD12345678901" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlv_logistical_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/tv_logisticalline0"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv_logistical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingTop="15dp" />

</LinearLayout>