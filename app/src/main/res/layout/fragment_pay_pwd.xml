<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="33dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_pay_pwd_et_bg"
        android:minHeight="45dp">

        <View
            android:id="@+id/v_1"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="#FF6633"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/v_2"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/v_2"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="#FF6633"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/v_1"
            app:layout_constraintRight_toLeftOf="@+id/v_3"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/v_3"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="#FF6633"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/v_2"
            app:layout_constraintRight_toLeftOf="@+id/v_4"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/v_4"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="#FF6633"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/v_3"
            app:layout_constraintRight_toLeftOf="@+id/v_5"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/v_5"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="#FF6633"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/v_4"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>