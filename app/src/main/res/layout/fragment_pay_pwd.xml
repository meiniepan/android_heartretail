<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@android:color/white"
        android:paddingTop="24dp">

        <com.dengyun.baselibrary.widgets.toolbar.BaseToolBar
            android:layout_width="match_parent"
            android:layout_height="@dimen/basetool_height"
            app:toolbar_title="修改支付密码" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="33dp"
        android:paddingEnd="33dp">

        <TextView
            android:id="@+id/tv_pay_pwd_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:layout_marginBottom="52dp"
            android:text="请输入原6位支付密码"
            android:textColor="#ff333333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_pay_pwd_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:layout_marginBottom="52dp"
            android:text="请设置新6位支付密码"
            android:textColor="#ff333333"
            android:textSize="18sp"
            android:visibility="gone" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_pay_pwd_et_bg"
            android:minHeight="45dp">

            <View
                android:id="@+id/v_1"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="#FF6633"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/v_2"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/v_2"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="#FF6633"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/v_1"
                app:layout_constraintRight_toLeftOf="@+id/v_3"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/v_3"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="#FF6633"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/v_2"
                app:layout_constraintRight_toLeftOf="@+id/v_4"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/v_4"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="#FF6633"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/v_3"
                app:layout_constraintRight_toLeftOf="@+id/v_5"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/v_5"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="#FF6633"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/v_4"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/v_dot_1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/shape_pay_pwd_dot"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@+id/v_1"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/v_dot_2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/shape_pay_pwd_dot"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/v_1"
                app:layout_constraintRight_toRightOf="@+id/v_2"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/v_dot_3"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/shape_pay_pwd_dot"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/v_2"
                app:layout_constraintRight_toRightOf="@+id/v_3"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/v_dot_4"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/shape_pay_pwd_dot"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/v_3"
                app:layout_constraintRight_toRightOf="@+id/v_4"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/v_dot_5"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/shape_pay_pwd_dot"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/v_4"
                app:layout_constraintRight_toRightOf="@+id/v_5"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/v_dot_6"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/shape_pay_pwd_dot"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/v_5"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_pay_pwd"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:maxLength="6"
                android:textColor="#0000"
                android:textCursorDrawable="@android:color/transparent"
                android:textSize="14sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</LinearLayout>