<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/tint">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:id="@+id/nsv_order_detail"
        android:overScrollMode="never"
        android:layout_height="match_parent"
        android:layout_marginBottom="45dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingTop="64dp"
                    android:layout_height="150dp"
                    android:background="@drawable/bac_order_detail"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:src="@drawable/icon_clock_white" />

                        <TextView
                            android:id="@+id/tv_status_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_weight="1"
                            android:text="等待付款"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/tv_residue_time1_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="剩余"
                            android:visibility="gone"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_residue_time1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:visibility="gone"
                            android:text="0小时0分0秒"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_16" />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="64dp"
                    android:orientation="vertical"
                    >
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="54dp" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/ll_shop_choose2"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="@dimen/dp_15"
                        app:cardBackgroundColor="#fff"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp">

                            <RelativeLayout
                                android:id="@+id/rl_shop"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/tv_tag2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:layout_toRightOf="@id/tv_tag1"
                                    android:background="@drawable/shape_orange_bac_rec_4"
                                    android:gravity="center"
                                    android:paddingStart="4dp"
                                    android:paddingTop="2dp"
                                    android:paddingEnd="4dp"
                                    android:paddingBottom="2dp"
                                    android:text="距您最近"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_tag3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_toRightOf="@id/tv_tag2"
                                    android:gravity="center"
                                    android:text="可诺丹婷大族广场店"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_address"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tv_tag1"
                                    android:layout_marginTop="12dp"
                                    android:gravity="center"
                                    android:text="北京市北京市大兴区荣京东街大族广场"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_distance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tv_tag1"
                                    android:layout_marginStart="7dp"
                                    android:layout_marginTop="12dp"
                                    android:layout_toRightOf="@id/tv_address"
                                    android:gravity="center"
                                    android:text="距您999m"
                                    android:textColor="@color/bar_grey_90"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_tag1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/shape_yellow_corner_rec"
                                    android:gravity="center"
                                    android:paddingStart="4dp"
                                    android:paddingTop="2dp"
                                    android:paddingEnd="4dp"
                                    android:paddingBottom="2dp"
                                    android:text="自提"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />
                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/iv_next"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_goods_detail_arrow_dark" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/ll_dl_detail"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="#fff"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/dp_15"
                            android:paddingEnd="@dimen/dp_15">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="您已阅读并同意《心零售代销协议》" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@drawable/ic_goods_detail_arrow_dark"
                                android:drawablePadding="@dimen/dp_9"
                                android:text="代销详情"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_15"
                android:background="@color/white"
                android:paddingEnd="@dimen/dp_15"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_order_detail_order_id"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:text="订单号123456789012345678" />


            <com.idengyun.statusrecyclerviewlib.StatusRecyclerView
                android:id="@+id/sr_goods1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_customer_service"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="联系客服"
                android:textColor="@color/heart_orange">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="商品总额" />

                    <TextView
                        android:id="@+id/tv_order_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥370.35" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="运费" />

                    <TextView
                        android:id="@+id/tv_order_freight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥0.00" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="17dp"
                    android:layout_marginTop="18dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="红包抵扣" />

                    <TextView
                        android:id="@+id/tv_order_red_packet_deduction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥0.00" />
                </LinearLayout>

                <include layout="@layout/split_ddd" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_order_should_total_pay_tag"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="实付总额"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_order_should_total_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        android:text="¥370.35" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单编号:"
                        android:textColor="@color/gray666" />

                    <TextView
                        android:id="@+id/tv_order_id2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                         />

                    <TextView
                        android:id="@+id/tv_order_id_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_12"
                        android:background="@drawable/shape_orange_bac_rec_4"
                        android:paddingStart="4dp"
                        android:paddingTop="2dp"
                        android:paddingEnd="4dp"
                        android:paddingBottom="2dp"
                        android:text="复制"
                        android:textColor="@color/white"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下单时间:"
                        android:textColor="@color/gray666" />

                    <TextView
                        android:id="@+id/tv_order_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                        android:text="2020-03-01 09:00:01" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_protocol_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="您已阅读并同意"
                        android:textColor="@color/gray666" />

                    <TextView
                        android:id="@+id/tv_order_protocol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                        android:text="《门店代收协议》"
                        android:textColor="@color/heart_orange" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pay_about2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付方式："
                        android:textColor="@color/gray666" />

                    <TextView
                        android:id="@+id/tv_pay_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微信支付"
                        android:layout_marginStart="@dimen/dp_5"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付时间："
                        android:textColor="@color/gray666" />

                    <TextView
                        android:id="@+id/tv_pay_time2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                        android:text="2020-03-01 09:00:01" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付流水号："
                        android:textColor="@color/gray666" />

                    <TextView
                        android:id="@+id/tv_pay_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                        android:text="123456789012345678" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_12"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="买家留言:"
                        android:textColor="@color/gray666" />

                    <TextView
                        android:id="@+id/tv_buyer_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                        tools:text="¥370.35" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <include layout="@layout/title_order_detail" />
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_gravity="bottom"
        android:paddingStart="15dp"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_should_pay_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应付金额："
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_should_pay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:textColor="@color/heart_orange"
            android:textSize="16sp"
            android:text="¥370.35" />

        <TextView
            android:id="@+id/tv_bottom_operate1"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:background="@drawable/shape_line_bac_gray666"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="@color/gray666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_bottom_operate2"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:layout_marginStart="@dimen/dp_8"
            android:background="@drawable/shape_orange_line_rec"
            android:gravity="center"
            android:text="立即付款"
            android:textColor="@color/heart_orange"
            android:textSize="14sp" />
    </LinearLayout>
</FrameLayout>