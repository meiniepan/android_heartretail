<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f83e3e">

    <ImageView
        android:id="@+id/iv_home_goods_indicator_retail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_goods_indicator"
        app:layout_constraintBottom_toBottomOf="@+id/rg_home_tab_bar"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="@+id/rg_home_tab_bar"
        app:layout_constraintRight_toLeftOf="@+id/iv_home_goods_indicator_wholesale"
        app:layout_constraintTop_toTopOf="@+id/rg_home_tab_bar" />

    <ImageView
        android:id="@+id/iv_home_goods_indicator_wholesale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_goods_indicator"
        app:layout_constraintBottom_toBottomOf="@+id/rg_home_tab_bar"
        app:layout_constraintLeft_toRightOf="@+id/iv_home_goods_indicator_retail"
        app:layout_constraintRight_toRightOf="@+id/rg_home_tab_bar"
        app:layout_constraintTop_toTopOf="@+id/rg_home_tab_bar" />

    <ImageView
        android:id="@+id/iv_home_goods_retail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_goods_retail"
        app:layout_constraintBottom_toBottomOf="@+id/rg_home_tab_bar"
        app:layout_constraintLeft_toLeftOf="@+id/rg_home_tab_bar"
        app:layout_constraintRight_toLeftOf="@+id/iv_home_goods_wholesale"
        app:layout_constraintTop_toTopOf="@+id/rg_home_tab_bar" />

    <ImageView
        android:id="@+id/iv_home_goods_wholesale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_goods_wholesale"
        app:layout_constraintBottom_toBottomOf="@+id/rg_home_tab_bar"
        app:layout_constraintLeft_toRightOf="@+id/iv_home_goods_retail"
        app:layout_constraintRight_toRightOf="@+id/rg_home_tab_bar"
        app:layout_constraintTop_toTopOf="@+id/rg_home_tab_bar" />

    <RadioGroup
        android:id="@+id/rg_home_tab_bar"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rb_home_retail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null" />

        <RadioButton
            android:id="@+id/rb_home_wholesale"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null" />
    </RadioGroup>
</android.support.constraint.ConstraintLayout>


