<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_16"
    android:paddingEnd="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_evaluate_avatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/def" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="@dimen/dp_9"
            android:layout_weight="1"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="施永哲"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_4"
                    android:background="@drawable/shape_orange_bac_rec_2"
                    android:text="LV5"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-01-01"
                android:textColor="@color/gray666"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/tv_order_status_status"
            android:layout_width="80dp"
            android:layout_height="15dp"
            android:numStars="5" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:text="这里是一段描述性文字，一般会有多行。如有评价，文字全部展示。有多少展示多少，直至规则限制的最大字符数量。" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@color/tint"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_7"
        android:paddingTop="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_7"
        android:paddingBottom="@dimen/dp_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="客服回复：" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-12-31" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:text="这里是一段描述性文字，一般会有多行。如有评价，文字全部展示。有多少展示多少，直至规则限制的最大字符数量。" />
    </LinearLayout>
</LinearLayout>