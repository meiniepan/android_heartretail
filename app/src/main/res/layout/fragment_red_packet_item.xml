<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="15dp"
    android:paddingEnd="15dp">

    <com.dengyun.baselibrary.widgets.imageview.CircleImageView
        android:id="@+id/iv_red_packet_user_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="#3f00" />

    <TextView
        android:id="@+id/tv_red_packet_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="#ff333333"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_red_packet_user_avatar"
        app:layout_constraintTop_toTopOf="@+id/iv_red_packet_user_avatar"
        tools:text="刘易阳" />

    <TextView
        android:id="@+id/tv_red_packet_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff666666"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_red_packet_user_name"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="2020-03-03 09:00" />

    <TextView
        android:id="@+id/tv_red_packet_out_money_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="消费额："
        android:textColor="#ff666666"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_red_packet_user_avatar"
        app:layout_constraintLeft_toRightOf="@+id/iv_red_packet_user_avatar" />

    <TextView
        android:id="@+id/tv_red_packet_out_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff333333"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_red_packet_out_money_key"
        app:layout_constraintLeft_toRightOf="@+id/tv_red_packet_out_money_key"
        tools:text="1234.56元" />

    <View
        android:id="@+id/v_red_packet_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>


