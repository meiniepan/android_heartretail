<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tint"
    android:orientation="vertical">

    <com.dengyun.baselibrary.widgets.toolbar.BaseOneRightToolBar
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:right_text="发放说明"
        app:right_text_color="@color/orange"
        app:toolbar_title="奖励明细" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_marginBottom="@dimen/dp_9"
            android:background="@drawable/shape_gray_tab_corner_rec"
            android:paddingStart="@dimen/dp_6"
            android:paddingTop="@dimen/dp_4"
            android:paddingEnd="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_4">

            <TextView
                android:id="@+id/tv_income"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_white_tab_corner_rec"
                android:gravity="center"
                android:text="收入" />

            <TextView
                android:id="@+id/tv_expend"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="支出" />
        </LinearLayout>
    </LinearLayout>
<com.idengyun.statusrecyclerviewlib.StatusRecyclerView
    android:id="@+id/sr_award_detail"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginEnd="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
</LinearLayout>