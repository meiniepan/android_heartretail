<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tint"
    android:orientation="vertical">

    <com.dengyun.baselibrary.widgets.toolbar.BaseToolBar
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:toolbar_title="查看物流" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">


        <TextView
            android:id="@+id/tv_order_status_shop_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            tools:text="发货单1" />

        <TextView
            android:id="@+id/tv_order_status_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_goods_detail_arrow_light"
            android:drawablePadding="@dimen/dp_9"
            android:textColor="@color/gray333"
            android:textSize="@dimen/sp_12"
            tools:text="京东快递 JD12345678901" />
    </LinearLayout>

    <com.idengyun.statusrecyclerviewlib.StatusRecyclerView
        android:id="@+id/sr_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15" />

</LinearLayout>