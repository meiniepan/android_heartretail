<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--    <ImageView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:background="#c51333"-->
    <!--        android:paddingStart="30dp"-->
    <!--        android:paddingEnd="30dp"-->
    <!--        android:src="#f83e3e" />-->

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="visible">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--                        <ImageView-->
            <!--                            android:layout_width="0dp"-->
            <!--                            android:layout_height="0dp"-->
            <!--                            android:background="#c51333"-->
            <!--                            android:paddingStart="30dp"-->
            <!--                            android:paddingEnd="30dp"-->
            <!--                            android:src="#f83e3e"-->
            <!--                            app:layout_constraintBottom_toBottomOf="parent"-->
            <!--                            app:layout_constraintDimensionRatio="H,375:1206"-->
            <!--                            app:layout_constraintLeft_toLeftOf="parent"-->
            <!--                            app:layout_constraintRight_toRightOf="parent"-->
            <!--                            app:layout_constraintTop_toTopOf="parent" />-->

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_home_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="H,1125:2766"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="104dp"
                android:src="@drawable/ic_home_text_1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="177dp"
                android:src="@drawable/ic_home_text_2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--            <ImageView-->
            <!--                android:layout_width="0dp"-->
            <!--                android:layout_height="0dp"-->
            <!--                android:src="#f83e3e"-->
            <!--                app:layout_constraintBottom_toBottomOf="parent"-->
            <!--                app:layout_constraintLeft_toLeftOf="@+id/iv_red_packet_header"-->
            <!--                app:layout_constraintRight_toRightOf="@+id/iv_red_packet_header"-->
            <!--                app:layout_constraintTop_toBottomOf="@+id/iv_red_packet_header" />-->

            <ImageView
                android:id="@+id/iv_red_packet_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="246dp"
                android:src="@drawable/ic_home_red_packet"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:paddingStart="43dp"
        android:paddingTop="303dp"
        android:paddingEnd="43dp"
        android:scrollbars="none"
        android:visibility="visible"
        app:layoutManager="android.support.v7.widget.GridLayoutManager"
        app:spanCount="2"
        tools:itemCount="6"
        tools:listitem="@layout/fragment_home_item" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@android:color/transparent"
        android:paddingTop="24dp">

        <!--        <com.dengyun.baselibrary.widgets.toolbar.BaseToolBar-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="@dimen/basetool_height"-->
        <!--            android:visibility="gone"-->
        <!--            app:toolbar_title="设置" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <TextView
                android:id="@+id/tv_home_location"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_home_title_location"
                android:drawableEnd="@drawable/ic_home_title_ext"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:maxLength="10"
                android:ellipsize="end"
                android:text="--"
                android:textColor="#ffffffff"
                android:textSize="18sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_home_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_home_title_share"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="分享"
                android:textColor="#ffffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_home_notice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:drawableStart="@drawable/ic_home_title_notice"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="消息"
                android:textColor="#ffffffff"
                android:textSize="14sp" />
        </LinearLayout>
    </FrameLayout>
</FrameLayout>


