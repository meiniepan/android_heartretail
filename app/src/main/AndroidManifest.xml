        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activitys.ChoosePayModeActivity" />
        <activity android:name=".activitys.PaySuccessActivity" />
        <activity android:name=".activitys.ConfirmOrderActivity" />
