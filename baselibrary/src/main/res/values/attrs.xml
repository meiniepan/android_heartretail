<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="left_text" format="string" />
    <attr name="right_text" format="string" />
    <attr name="emptyView" format="reference" />
    <attr name="errorView" format="reference" />
    <attr name="loadingView" format="reference" />
    <attr name="emptyViewDrawable" format="reference" />
    <attr name="emptyViewText" format="string" />
    <attr name="errorViewDrawable" format="reference" />
    <attr name="errorViewText" format="string" />
    <attr name="loadingViewText" format="string" />

    <declare-styleable name="StateLayout">
        <attr name="errorDrawable" format="reference" />
        <attr name="emptyDrawable" format="reference" />
        <attr name="progressView" format="reference" />
    </declare-styleable>

    <declare-styleable name="BaseToolBar">
        <attr name="left_icon" format="reference" />
        <attr name="left_text" />
        <attr name="left_text_color" format="color" />
        <attr name="left_text_size" format="dimension" />
        <attr name="toolbar_title" format="string" />
        <attr name="is_hide_left" format="boolean" />
        <attr name="title_text_color" format="color" />
        <attr name="title_text_size" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BaseOneRightToolBar">
        <attr name="right_icon" format="reference" />
        <attr name="right_text" />
        <attr name="right_text_color" format="color" />
        <attr name="right_text_size" format="dimension" />
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>
    <declare-styleable name="ClearAllEditText">
        <attr name="clear_pic" format="reference" />    <!-- 清除全部的按钮icon -->
        <attr name="hint" format="string" />            <!-- edt的提示文案 -->
        <attr name="text" format="string" />            <!-- edt的内容文案 -->
        <attr name="max_lengh" format="integer" />      <!-- edt的最大输入数量 -->
        <attr name="singeline" format="boolean" />      <!-- 是否单行显示 -->
        <attr name="bgcolor" format="color" />          <!-- 背景色 -->
    </declare-styleable>
    <declare-styleable name="MyItemView">
        <attr name="left_pic" format="reference" />         <!-- 左侧图片icon -->
        <attr name="left_text" />                          <!-- 左侧文字 -->
        <attr name="right_text" />                         <!-- 右侧文字 -->
        <attr name="left_textSize" format="dimension" />    <!-- 左侧文字大小 -->
        <attr name="right_textSize" format="dimension" />   <!-- 右侧文字大小 -->
        <attr name="all_textSize" format="dimension" />     <!-- 全部文字大小，设置了此属性就不用设置左右文字大小 -->
        <attr name="left_textColor" format="color" />       <!-- 左侧文字颜色 -->
        <attr name="right_textColor" format="color" />      <!-- 右侧文字颜色 -->
        <attr name="right_pic" format="reference" />        <!-- 右侧图片icon -->
        <attr name="item_height" format="dimension" />      <!-- 此模板view高度 -->
        <attr name="item_backgroundcolor" format="color" /> <!-- view背景色 -->
        <attr name="item_background" format="reference" />  <!-- view背景图片 -->
        <attr name="show_topline" format="boolean" />       <!-- 是否显示上方的分割线 -->
        <attr name="show_bottomline" format="boolean" />    <!-- 是否显示下方的分割线 -->
        <attr name="line_color" format="color" />           <!-- 分割线颜色 -->
        <attr name="left_margin" format="dimension" />      <!-- 左侧距离的margin -->
        <attr name="right_margin" format="dimension" />     <!-- 右侧距离的margin -->
        <attr name="show_titleliftpic" format="boolean" />
    </declare-styleable>
    <declare-styleable name="StateRelativeLayout">
        <attr name="emptyView" />
        <attr name="errorView" />
        <attr name="loadingView" />
        <attr name="emptyViewDrawable" />
        <attr name="emptyViewText" />
        <attr name="errorViewDrawable" />
        <attr name="errorViewText" />
        <attr name="loadingViewText" />
        <attr name="noNetworkView" format="reference" />
        <attr name="contentView" format="reference" />
    </declare-styleable>
    <declare-styleable name="RatioImageView">
        <attr name="image_ratio" format="float" />
    </declare-styleable>
    <declare-styleable name="RoundImageView">
        <attr name="radius" format="dimension" />
        <attr name="left_top_radius" format="dimension" />
        <attr name="right_top_radius" format="dimension" />
        <attr name="right_bottom_radius" format="dimension" />
        <attr name="left_bottom_radius" format="dimension" />
    </declare-styleable>
    <declare-styleable name="PicRecycleView">
        <attr name="column_num" format="integer" />  <!-- 设置有几列 -->
        <attr name="max_num" format="integer" />     <!-- 设置最多的图片数 -->
        <attr name="add_pic" format="reference" />   <!-- 设置一直在最后的那个添加图片的icon -->
    </declare-styleable>
    <declare-styleable name="TextImageView">
        <attr name="drawableLeftWidth" format="dimension"/>
        <attr name="drawableLeftHeight" format="dimension"/>
        <attr name="drawableTopWidth" format="dimension"/>
        <attr name="drawableTopHeight" format="dimension"/>
        <attr name="drawableRightWidth" format="dimension"/>
        <attr name="drawableRightHeight" format="dimension"/>
        <attr name="drawableBottomWidth" format="dimension"/>
        <attr name="drawableBottomHeight" format="dimension"/>
    </declare-styleable>

</resources>